<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Auth">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="411dp"
            android:layout_height="259dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher_foreground"
                android:contentDescription="TODO" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="367dp"
            android:layout_height="31dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.708">

            <Button
                android:id="@+id/button"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/inset"
                android:fontFamily="@font/avanda"
                android:onClick="onMyButtonClick"
                android:singleLine="false"
                android:stateListAnimator="@null"
                android:text="Войти"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="367dp"
            android:layout_height="84dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/inset_auth"
                android:ems="10"
                android:fontFamily="@font/avanda"
                android:hint="   Фамилия"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:textColorHint="#858a92 "
                android:textColorLink="#FAF8F8"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d7d8da" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/inset_auth_bottom"
                android:ems="10"
                android:fontFamily="@font/avanda"
                android:hint="   Пароль"
                android:inputType="textPassword"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#858a92 "
                android:textColorLink="#FAF8F8" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>